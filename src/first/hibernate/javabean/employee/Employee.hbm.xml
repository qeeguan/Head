<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping SYSTEM "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	<class name="first.hibernate.javabean.employee.Employee" table="tb_employee">
		<id name="id" column="id" type="int">	<!-- 主键 -->
			<generator class="native"></generator>
		</id>
		<property name="name" type="string" not-null="true" length="255">
			<column name="name"></column>
		</property>
		<property name="sex" type="string" not-null="true" length="255">
			<column name="sex"></column>
		</property>
		<property name="address" type="string" not-null="true"
			length="255">
			<column name="address"></column>
		</property>
		<property name="remark" type="string" not-null="true" length="255">
			<column name="remark"></column>
		</property>
	</class>
</hibernate-mapping>
